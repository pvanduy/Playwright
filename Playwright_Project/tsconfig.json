{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["robot_order_demo/tests/*"],
      "@pages/*": ["robot_order_demo/pages/*"],
      "@utils/*": ["robot_order_demo/utils/*"]
    }
  },
  "include": [
    "playwright.config.ts",
    "robot_order_demo/**/*.ts"
  ]
}
